<h1>Message board!</h1>
@foreach (Message m in Model)
{
    if (m.UserId == User.Identity.Name)
    {
        <div>
            @m.UserId
            <textarea class="form-control" rows="3" disabled>
                @m.Message1
            
                </textarea>
            @m.PostedTime
        </div>
    }

    @if (m.Updated == true)
    {
        <p>edited</p>
    }



    @if (User.Identity.Name == m.UserId)
    {
        <a asp-action="UpdateMessage" asp-route-userId="@m.Id">Edit</a>
        <a asp-action="UpdateMessage" asp-route-userId="@m.Id">Delete</a>
    }
}


<h3>Enter a message</h3>
<form method="post" asp-action="messageboard">
    <input type="text" name="message" id="" placeholder="Type your message and press enter:" />
    <button class="btn btn-primary">Submit</button>

</form>


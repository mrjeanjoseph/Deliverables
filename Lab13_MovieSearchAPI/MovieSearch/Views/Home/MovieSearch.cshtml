@{
}

<h2>All movies</h2>
@if (Model == null)
{
    <form method="post" asp-action="MovieSearch">
        <label for="Title">Search by Title</label>
        <input name="Title" type="Text" id="Title" required />
        <input type="submit" />
    </form>
}
else
{
    <div>Here's your movie</div>
    <p>@Model.Title</p>
    <img src="@Model.Poster" />
}